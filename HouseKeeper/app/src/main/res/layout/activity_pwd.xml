<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:onClick="keyboard"
    android:background="@color/all_backgroup">

    <com.jinke.housekeeper.saas.report.ui.widget.NavigationView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_2"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:background="@drawable/shape_text_line_bg">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_96"
        android:paddingLeft="@dimen/base_dimen_30"
        android:background="@drawable/shape_text_line_bg"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_dimen_96"
            android:text="@string/old_pwd"
            android:gravity="center_vertical"
            android:textColor="@color/register_text_black"
            android:textSize="@dimen/base_dimen_28" />

        <EditText
            android:id="@+id/et_pwd_oldpwd"
            android:layout_width="match_parent"
            android:maxLength="20"
            android:layout_height="@dimen/base_dimen_96"
            android:layout_marginLeft="@dimen/base_dimen_200"
            android:background="@null"
            android:hint="@string/old_pwd"
            android:inputType="numberPassword"
            android:textColor="@color/register_text_black"
            android:textColorHint="@color/register_edit_gray"
            android:textSize="@dimen/base_dimen_28"
            android:singleLine="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_96"
        android:paddingLeft="@dimen/base_dimen_30"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:background="@drawable/shape_text_line_bg"


        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/new_pwd"
            android:gravity="center_vertical"
            android:textColor="@color/register_text_black"
            android:textSize="@dimen/base_dimen_28" />

        <EditText
            android:id="@+id/et_pwd_newpwd"
            android:layout_width="match_parent"
            android:maxLength="20"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base_dimen_200"
            android:background="@null"
            android:hint="@string/new_pwd"
            android:inputType="numberPassword"
            android:textColor="@color/register_text_black"
            android:textColorHint="@color/register_edit_gray"
            android:textSize="@dimen/base_dimen_28"
            android:singleLine="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_96"
        android:paddingLeft="@dimen/base_dimen_30"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:background="@drawable/shape_text_line_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/config_new_pwd"
            android:gravity="center_vertical"
            android:textColor="@color/register_text_black"
            android:textSize="@dimen/base_dimen_28" />

        <EditText
            android:id="@+id/et_pwd_configernewpwd"
            android:layout_width="match_parent"

            android:maxLength="20"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base_dimen_200"
            android:background="@null"
            android:hint="@string/config_new_pwd"
            android:inputType="numberPassword"
            android:textColor="@color/register_text_black"
            android:textColorHint="@color/register_edit_gray"
            android:textSize="@dimen/base_dimen_28"
            android:singleLine="true"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/btn_pwd_congigerupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_160"
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:text="@string/config_update"
        android:textColor="@color/white"
        android:textSize="@dimen/base_dimen_32"
        android:background="@drawable/shape_version_button_background"/>
</LinearLayout>