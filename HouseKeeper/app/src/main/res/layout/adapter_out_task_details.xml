<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_66"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/base_dimen_2"
            android:layout_height="match_parent"
            android:background="@color/equipment_text_18"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/out_time_plane_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/equipment_text_7"
                android:textSize="@dimen/base_dimen_28"
                android:text="4444444444444"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_2"
                android:layout_alignParentBottom="true"
                android:background="@color/equipment_text_18"/>

        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/base_dimen_2"
            android:layout_height="match_parent"
            android:background="@color/equipment_text_18"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/out_time_point_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/base_dimen_28"
                android:text="4444444444444"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_2"
                android:layout_alignParentBottom="true"
                android:background="@color/equipment_text_18"/>

        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/base_dimen_2"
            android:layout_height="match_parent"
            android:background="@color/equipment_text_18"/>

    </LinearLayout>

</RelativeLayout>