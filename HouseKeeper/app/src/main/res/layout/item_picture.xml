<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">

    <ImageView
        android:id="@+id/imgPicture"
        android:layout_width="@dimen/base_dimen_212"
        android:layout_height="@dimen/base_dimen_212"
        android:padding="@dimen/base_dimen_10"
        android:scaleType="fitXY"
        android:src="@drawable/add_picture2x" />

    <ImageView
        android:id="@+id/imgPictureDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imgPicture"
        android:layout_alignTop="@+id/imgPicture"
        android:background="@null"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:src="@drawable/delete_picture2x"
        android:visibility="visible" />
</RelativeLayout>