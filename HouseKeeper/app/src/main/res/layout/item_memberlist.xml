<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_backgroup"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_memberlist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_96"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_frame_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/base_dimen_30">

            <TextView
                android:id="@+id/tv_memberlist_deparment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/department"
                android:textColor="@color/black"
                android:textSize="@dimen/base_dimen_28" />

            <ImageView
                android:id="@+id/iv_memberlist_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/base_dimen_30"
                android:src="@drawable/qingxuanze" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>