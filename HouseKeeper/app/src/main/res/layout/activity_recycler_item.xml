<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/base_dimen_100"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.jinke.housekeeper.ui.widget.VerticalProgressView
        android:id="@+id/progressView"
        android:layout_width="@dimen/base_dimen_60"
        android:layout_height="match_parent"
        android:layout_above="@+id/view" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_2"
        android:layout_above="@+id/month"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/base_dimen_20"
        android:ellipsize="end"
        android:maxEms="3"
        android:singleLine="true"
        android:text="一月"
        android:textColor="@color/black" />

</RelativeLayout>