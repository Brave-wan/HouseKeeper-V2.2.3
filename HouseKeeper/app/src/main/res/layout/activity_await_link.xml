<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_bg"
    tools:context="com.jinke.housekeeper.saas.patrol.ui.activity.PatrolLinkActivity">

    <RelativeLayout
        android:layout_width="@dimen/base_dimen_420"
        android:layout_height="@dimen/base_dimen_372"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/base_dimen_198"
        android:background="@drawable/corners_bg">

        <ImageView
            android:id="@+id/equipment_on_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base_dimen_60"
            android:background="@drawable/equipment_on_ico" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/equipment_on_ico"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base_dimen_48"
            android:text="@string/activity_await_link_hint"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/base_dimen_30" />


    </RelativeLayout>


</RelativeLayout>
