        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_contact_tx_head"
        android:layout_alignTop="@+id/item_contact_tx_head"
        android:layout_marginLeft="@dimen/base_dimen_16"
        android:layout_toRightOf="@id/item_contact_tx_head"
        android:gravity="center_vertical"
