<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/base_dimen_540"
        android:layout_height="@dimen/base_dimen_360"
        android:layout_centerInParent="true"
        android:background="@drawable/equipment_dialog_layout_bg">

        <TextView
            android:id="@+id/equipment_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base_dimen_42"
            android:text="标题"
            android:textColor="@color/equipment_text_16"
            android:textSize="@dimen/base_dimen_34" />

        <TextView
            android:id="@+id/equipment_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/equipment_dialog_line"
            android:layout_below="@+id/equipment_dialog_title"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:gravity="center"
            android:text="本月设备巡检已经完成！"
            android:textColor="@color/equipment_text_16"
            android:textSize="@dimen/base_dimen_34" />

        <TextView
            android:id="@+id/equipment_dialog_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/base_dimen_86"
            android:background="@color/equipment_line_7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_86"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/equipment_dialog_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/equipment_text_17"
                android:textSize="@dimen/base_dimen_34" />

            <TextView
                android:id="@+id/equipment_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/equipment_text_17"
                android:textSize="@dimen/base_dimen_34" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>