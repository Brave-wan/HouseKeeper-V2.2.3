<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRegisterBackground"
    android:orientation="vertical">

    <www.jinke.com.library.widget.NavigationView
        android:id="@+id/activity_register_navigationview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_2"
            android:background="@color/dialog" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/base_dimen_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/phone"
                android:textColor="@color/register_text_black"
                android:textSize="@dimen/base_dimen_28" />

            <EditText
                android:id="@+id/et_register_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="@string/editPhone"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingBottom="@dimen/base_dimen_30"
                android:paddingRight="@dimen/base_dimen_40"
                android:paddingTop="@dimen/base_dimen_30"
                android:textColor="@color/register_text_black"
                android:textColorHint="@color/register_edit_gray"
                android:textSize="@dimen/base_dimen_28" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_2"
                android:layout_alignBottom="@+id/et_register_phone"
                android:background="@color/dialog" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/base_dimen_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/pwd"
                android:textColor="@color/register_text_black"
                android:textSize="@dimen/base_dimen_28" />

            <EditText
                android:id="@+id/et_register_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="@string/editNum"
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingBottom="@dimen/base_dimen_30"
                android:paddingRight="@dimen/base_dimen_40"
                android:paddingTop="@dimen/base_dimen_30"
                android:textColor="@color/register_text_black"
                android:textColorHint="@color/register_edit_gray"
                android:textSize="@dimen/base_dimen_28" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_2"
                android:layout_alignBottom="@+id/et_register_pwd"
                android:background="@color/dialog" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/base_dimen_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/confirm"
                android:textColor="@color/register_text_black"
                android:textSize="@dimen/base_dimen_28" />

            <EditText
                android:id="@+id/et_register_confirmpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="@string/edit_config_Num"
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingBottom="@dimen/base_dimen_30"
                android:paddingRight="@dimen/base_dimen_40"
                android:paddingTop="@dimen/base_dimen_30"
                android:textColor="@color/register_text_black"
                android:textColorHint="@color/register_edit_gray"
                android:textSize="@dimen/base_dimen_28" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_2"
                android:layout_alignBottom="@+id/et_register_confirmpwd"
                android:background="@color/dialog" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/base_dimen_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/name"
                android:textColor="@color/register_text_black"
                android:textColorHint="@color/register_edit_gray"
                android:textSize="@dimen/base_dimen_28" />

            <EditText
                android:id="@+id/et_register_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="@string/edit_name"
                android:maxLength="10"
                android:paddingBottom="@dimen/base_dimen_30"
                android:paddingRight="@dimen/base_dimen_40"
                android:paddingTop="@dimen/base_dimen_30"
                android:textColor="@color/register_text_black"
                android:textColorHint="@color/register_edit_gray"
                android:textSize="@dimen/base_dimen_28" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_2"
                android:layout_alignBottom="@+id/et_register_name"
                android:background="@color/dialog" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_register_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/base_dimen_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/base_dimen_30"
                android:paddingTop="@dimen/base_dimen_30"
                android:text="所属机构"
                android:textColor="@color/register_text_black"
                android:textSize="@dimen/base_dimen_28" />

            <TextView
                android:id="@+id/tv_rigster_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/base_dimen_10"
                android:drawableRight="@drawable/choose"
                android:maxLength="10"
                android:paddingBottom="@dimen/base_dimen_30"
                android:paddingRight="@dimen/base_dimen_40"
                android:paddingTop="@dimen/base_dimen_30"
                android:text="请选择"
                android:textColor="@color/register_edit_gray"
                android:textSize="@dimen/base_dimen_28" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_2"
                android:layout_alignBottom="@+id/tv_rigster_project"
                android:background="@color/dialog" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_register_department"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/base_dimen_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/base_dimen_30"
                android:paddingTop="@dimen/base_dimen_30"
                android:text="@string/project_department"
                android:textColor="@color/register_text_black"
                android:textSize="@dimen/base_dimen_28" />

            <TextView
                android:id="@+id/tv_rigster_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/base_dimen_10"
                android:drawableRight="@drawable/choose"
                android:maxLength="10"
                android:paddingBottom="@dimen/base_dimen_30"
                android:paddingRight="@dimen/base_dimen_40"
                android:paddingTop="@dimen/base_dimen_30"
                android:text="请选择"
                android:textColor="@color/register_edit_gray"
                android:textSize="@dimen/base_dimen_28" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_2"
                android:layout_alignBottom="@+id/tv_rigster_department"
                android:background="@color/dialog" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingLeft="@dimen/base_dimen_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="岗位"
                android:textColor="@color/register_text_black"
                android:textColorHint="@color/register_edit_gray"
                android:textSize="@dimen/base_dimen_28" />

            <EditText
                android:id="@+id/fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入您的岗位"
                android:maxLength="10"
                android:paddingBottom="@dimen/base_dimen_30"
                android:paddingRight="@dimen/base_dimen_40"
                android:paddingTop="@dimen/base_dimen_30"
                android:textColor="@color/register_text_black"
                android:textColorHint="@color/register_edit_gray"
                android:textSize="@dimen/base_dimen_28" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_2"
            android:background="@color/dialog" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_registerNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_40"
        android:layout_marginRight="@dimen/base_dimen_40"
        android:layout_marginTop="@dimen/base_dimen_40"
        android:background="@drawable/shape_login_button_background"
        android:text="@string/register_now"
        android:textColor="@color/white"
        android:textSize="@dimen/base_dimen_28" />

    <TextView
        android:id="@+id/tv_register_errortips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_40"
        android:layout_marginTop="@dimen/base_dimen_10"
        android:text="@string/errortips"
        android:textColor="@color/A106"
        android:textSize="@dimen/base_dimen_28"
        android:visibility="invisible" />
</LinearLayout>