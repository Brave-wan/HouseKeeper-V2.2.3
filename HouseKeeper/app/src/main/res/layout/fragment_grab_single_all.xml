<?xml version="1.0" encoding="utf-8"?>
<www.jinke.com.library.pulltorefresh.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grab_single_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_backgroup"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.jinke.housekeeper.saas.report.ui.fragment.GrabSingleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.jinke.housekeeper.ui.widget.LoadingLayout
            android:id="@+id/grab_single_load_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:isFirstVisible="true">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/grab_single_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/base_dimen_24"
                android:divider="@null"
                android:dividerHeight="@dimen/base_dimen_20"
                android:listSelector="@android:color/transparent" />
        </com.jinke.housekeeper.ui.widget.LoadingLayout>
    </LinearLayout>
</www.jinke.com.library.pulltorefresh.PullToRefreshScrollView>
