<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_114"
        android:background="@color/layout_title_bar_bg"
        android:paddingLeft="@dimen/base_dimen_30"
        android:paddingRight="@dimen/base_dimen_30">


        <TextView
            android:id="@+id/room_list_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="444444444444444444444444444"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/point_plan_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_alignParentBottom="true"
            android:background="@color/layout_title_bar_line" />

    </RelativeLayout>

</LinearLayout>