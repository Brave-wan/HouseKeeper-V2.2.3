<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/base_dimen_20"
    android:background="@color/white"
    android:padding="@dimen/base_dimen_20">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/base_dimen_6"
            android:padding="@dimen/base_dimen_10"
            android:text="@string/Adminator"
            android:textColor="@color/register_text_deepblack"
            android:textSize="@dimen/base_dimen_32" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_dimen_10"
            android:text="@string/Adminator"
            android:textColor="@color/colorDetailsText"
            android:textSize="@dimen/base_dimen_28" />
    </LinearLayout>
</RelativeLayout>