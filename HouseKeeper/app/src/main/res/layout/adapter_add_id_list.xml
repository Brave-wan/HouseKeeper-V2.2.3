<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/equipment_bg_4"
            android:paddingBottom="@dimen/base_dimen_18"
            android:paddingLeft="@dimen/base_dimen_18"
            android:paddingTop="@dimen/base_dimen_18">


            <TextView
                android:id="@+id/adapter_add_id_list_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/blue_border_background"
                android:hint="@string/add_id_list_hint_1"
                android:lines="1"
                android:padding="@dimen/base_dimen_5"
                android:textColor="@color/equipment_text_15"
                android:textColorHint="@color/equipment_text_6"
                android:textSize="@dimen/base_dimen_28" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/equipment_bg_1"
            android:paddingBottom="@dimen/base_dimen_18"
            android:paddingLeft="@dimen/base_dimen_18"
            android:paddingTop="@dimen/base_dimen_18">

            <TextView
                android:id="@+id/adapter_add_id_list_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/blue_border_background"
                android:hint="@string/add_id_list_hint_2"
                android:lines="1"
                android:padding="@dimen/base_dimen_5"
                android:textColor="@color/equipment_text_15"
                android:textColorHint="@color/equipment_text_6"
                android:textSize="@dimen/base_dimen_28" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>