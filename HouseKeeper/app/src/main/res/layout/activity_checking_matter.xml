<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checking_matter_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/equipment_bg"
    android:orientation="vertical"
    tools:context="com.jinke.housekeeper.saas.equipment.ui.activity.CheckingMatterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/base_dimen_28"
        android:layout_marginTop="@dimen/base_dimen_28"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dimen_12"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_406"
                android:background="@color/equipment_title_bg"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_100">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/base_dimen_24"
                        android:gravity="center_vertical"
                        android:text="@string/checking_matter_object"
                        android:textColor="@color/equipment_text_11"
                        android:textSize="@dimen/base_dimen_30" />
                    <TextView
                        android:id="@+id/checking_matter_object"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/base_dimen_24"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/equipment_text_11"
                        android:textSize="@dimen/base_dimen_30" />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_2"
                    android:background="@color/equipment_line_6" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_100">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/base_dimen_24"
                        android:gravity="center_vertical"
                        android:text="@string/checking_matter_location"
                        android:textColor="@color/equipment_text_11"
                        android:textSize="@dimen/base_dimen_30" />
                    <TextView
                        android:id="@+id/checking_matter_location"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/base_dimen_24"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/equipment_text_11"
                        android:textSize="@dimen/base_dimen_30" />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_2"
                    android:background="@color/equipment_line_6" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_100">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/base_dimen_24"
                        android:gravity="center_vertical"
                        android:text="@string/checking_matter_problem_promoter"
                        android:textColor="@color/equipment_text_11"
                        android:textSize="@dimen/base_dimen_30" />
                    <TextView
                        android:id="@+id/checking_matter_problem_promoter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/base_dimen_24"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/equipment_text_11"
                        android:textSize="@dimen/base_dimen_30" />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_2"
                    android:background="@color/equipment_line_6" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_100">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/base_dimen_24"
                        android:gravity="center_vertical"
                        android:text="@string/checking_matter_submit_time"
                        android:textColor="@color/equipment_text_11"
                        android:textSize="@dimen/base_dimen_30" />
                    <TextView
                        android:id="@+id/checking_matter_submit_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/base_dimen_24"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/equipment_text_11"
                        android:textSize="@dimen/base_dimen_30" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_24"
                android:background="@color/equipment_title_bg"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/checking_matter_submit_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base_dimen_50"
                    android:layout_marginRight="@dimen/base_dimen_60"
                    android:layout_marginTop="@dimen/base_dimen_64"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="@string/checking_matter_submit_hint"
                    android:textColor="@color/equipment_text_12"
                    android:textColorHint="@color/equipment_text_13"
                    android:textSize="14sp" />
                <com.jinke.housekeeper.saas.report.ui.widget.MyGridView
                    android:id="@+id/checking_matter_submit_img_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checking_matter_submit_info"
                    android:layout_marginBottom="@dimen/base_dimen_20"
                    android:layout_marginLeft="@dimen/base_dimen_24"
                    android:layout_marginRight="@dimen/base_dimen_40"
                    android:layout_marginTop="@dimen/base_dimen_20"
                    android:numColumns="3" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/equipment_title_bg"
        android:paddingBottom="@dimen/base_dimen_16"
        android:paddingTop="@dimen/base_dimen_16">
        <TextView
            android:id="@+id/checking_matter_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/base_dimen_24"
            android:layout_marginRight="@dimen/base_dimen_11"
            android:layout_weight="1"
            android:background="@drawable/equipment_two_button"
            android:gravity="center"
            android:text="@string/checking_matter_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/base_dimen_30" />
        <TextView
            android:id="@+id/checking_matter_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/base_dimen_11"
            android:layout_marginRight="@dimen/base_dimen_24"
            android:layout_weight="1"
            android:background="@drawable/equipment_two_button"
            android:gravity="center"
            android:text="@string/checking_matter_submit"
            android:textColor="@color/white"
            android:textSize="@dimen/base_dimen_30" />
    </LinearLayout>
</LinearLayout>