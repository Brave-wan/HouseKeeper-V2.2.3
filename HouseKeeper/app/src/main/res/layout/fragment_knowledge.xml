<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <www.jinke.com.library.widget.NavigationView
        android:id="@+id/fragment_knowledge_navigationview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/base_dimen_28"
        android:id="@+id/fragment_knowledge_recyclerview_inspection_application"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_knowledge_navigationview"
        android:background="@drawable/shape_fragment_msg_top_parting_line_1dp" />
</RelativeLayout>