<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_main_default_bg_color">

    <www.jinke.com.library.widget.NavigationView
        android:id="@+id/activity_people_review_navigationview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/activity_people_review_navigationview"
        android:id="@+id/activity_people_review_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>