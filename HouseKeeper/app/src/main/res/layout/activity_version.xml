<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/activity_version_layout_root"
    android:orientation="vertical">

    <www.jinke.com.library.widget.NavigationView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/base_dimen_80"
            android:paddingTop="@dimen/base_dimen_80"
            android:src="@drawable/logouserfragment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/base_dimen_20"
            android:text="@string/system"
            android:textColor="@color/register_text_deepblack"
            android:textSize="@dimen/base_dimen_36" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/base_dimen_60"
            android:paddingTop="@dimen/base_dimen_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/base_dimen_20"
                android:text="@string/versionNow"
                android:textColor="@color/register_text_deepblack"
                android:textSize="@dimen/base_dimen_28" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/base_dimen_20"
                android:text="@string/version"
                android:textColor="@color/register_text_deepblack"
                android:textSize="@dimen/base_dimen_28" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_2"
            android:background="@drawable/shape_text_line_bg"></View>

        <TextView
            android:id="@+id/activity_version_text_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/base_dimen_30"
            android:paddingTop="@dimen/base_dimen_30"
            android:text="@string/manager_phone"
            android:textColor="@color/register_text_deepblack"
            android:textSize="@dimen/base_dimen_28" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/all_backgroup">

        <Button
            android:id="@+id/btn_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:layout_marginTop="@dimen/base_dimen_100"
            android:background="@drawable/shape_version_button_background"
            android:text="检查更新"
            android:textColor="@color/white"
            android:textSize="@dimen/base_dimen_32" />
    </LinearLayout>
</LinearLayout>