<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_checkdetail"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/frame_blue"
        app:tabIndicatorHeight="@dimen/base_dimen_2"
        app:tabSelectedTextColor="@color/textselect"
        app:tabTextColor="@color/textunselect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_checkdetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>