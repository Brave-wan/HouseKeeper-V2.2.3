<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg">

    <com.jinke.housekeeper.saas.report.ui.widget.NavigationView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/titleBar"
        android:id="@+id/text_self"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_90"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base_dimen_40"
        android:text="@string/activity_self_deal_true"
        android:textColor="@color/register_text_black" />

    <TextView
        android:id="@+id/text_others"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_90"
        android:layout_below="@+id/text_self"
        android:background="@drawable/shape_fragment_msg_top_parting_line_1dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base_dimen_40"
        android:text="@string/activity_self_deal_false"
        android:textColor="@color/register_text_black" />
</RelativeLayout>