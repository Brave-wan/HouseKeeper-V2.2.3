<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/base_dimen_400"
    android:layout_height="@dimen/base_dimen_300"
    android:background="@drawable/dialog_loading_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_200"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/base_dimen_20"
        android:paddingRight="@dimen/base_dimen_20"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iconMicrophone"
            android:layout_width="@dimen/base_dimen_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/recorder" />

        <ImageView
            android:id="@+id/iconVolume"
            android:layout_width="@dimen/base_dimen_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/v1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tips"
        android:layout_width="@dimen/base_dimen_300"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/base_dimen_10"
        android:gravity="center"
        android:padding="@dimen/base_dimen_10"
        android:textSize="@dimen/base_dimen_28"
        android:text="手指上滑，取消发送"
        android:textColor="@color/white" />
</LinearLayout>