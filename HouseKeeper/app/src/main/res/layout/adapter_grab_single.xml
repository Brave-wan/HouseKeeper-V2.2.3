<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/icon_work_order_frame"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_work_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/image_work_order"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/image_work_order"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:text=" layer-list和level-list标签"
            android:textColor="@color/work_bench_tx_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/image_work_order"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:background="@color/work_bench_tx_theme"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/voiceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_work_order_title"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/image_work_order"
            android:paddingLeft="@dimen/base_dimen_20"
            android:paddingRight="@dimen/base_dimen_20"
            android:paddingTop="@dimen/base_dimen_10">

            <RelativeLayout
                android:id="@+id/rl_video_view"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_report_register_describe">

                <View
                    android:id="@+id/voiceTime"
                    android:layout_width="@dimen/base_dimen_40"
                    android:layout_height="@dimen/base_dimen_40"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/v_anim3"
                    android:padding="@dimen/base_dimen_20"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_28" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_video_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rl_video_view"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:src="@drawable/icon_report_register_describe_left" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_grab_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_work_order"
            android:layout_marginLeft="35dp"
            android:layout_toLeftOf="@+id/image_work_order"
            android:text="2018-04-18 22:10"
            android:textColor="#B8B8B8"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>