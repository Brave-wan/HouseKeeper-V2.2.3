<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_backgroup"
    android:orientation="vertical">

    <www.jinke.com.library.widget.NavigationView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_noticeinfo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_dimen_20"
            android:text="@string/Adminator"
            android:textColor="@color/register_text_deepblack"
            android:textSize="@dimen/base_dimen_30" />

        <TextView
            android:id="@+id/tv_noticeinfo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_dimen_20"
            android:text="@string/Adminator"
            android:textColor="@color/colorNoticeInfoText"
            android:textSize="@dimen/base_dimen_28" />
    </LinearLayout>

    <com.jinke.housekeeper.ui.widget.LoadingLayout
        android:id="@+id/loadLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isFirstVisible="true">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:layout_marginRight="@dimen/base_dimen_20"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:background="@color/white">

        </WebView>
    </com.jinke.housekeeper.ui.widget.LoadingLayout>
</LinearLayout>